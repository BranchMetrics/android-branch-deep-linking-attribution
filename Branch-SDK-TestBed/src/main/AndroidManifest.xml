            <!-- Keys for auto deep linking this activity -->
            <meta-data
                android:name="io.branch.sdk.auto_link_keys"
                android:value="auto_deeplink_key_1,auto_deeplink_key_2" />

            <!-- Deep link path for auto deep linking -->
            <meta-data
