<resources>
    <style name="Share_Sheet_Style" parent="android:style/Widget.ListView">
        <item name="android:divider">@android:color/holo_red_dark</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:listSelector">@android:drawable/ic_menu_share</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:cacheColorHint">#FF00FF00</item>
    </style>

    <style name="testbed_button_style">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/pill_button</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">left|center_vertical</item>

    </style>

    <style name="testbed_text_view">
        <item name="android:layout_width">360dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">#0074DF</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:statusBarColor">#0074DF</item>
        <item name="android:colorPrimary">#0074DF</item>
    </style>

</resources>
